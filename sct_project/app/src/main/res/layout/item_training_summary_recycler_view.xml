                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Accesorios"
                        android:textSize="16sp"
                        android:gravity="end"
                        android:paddingRight="20sp"
                        android:textColor="@color/color_on_primary"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>



